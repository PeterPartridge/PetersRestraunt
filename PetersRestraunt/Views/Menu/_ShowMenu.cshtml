@model IEnumerable<PetersRestraunt_Models.Menu>


<table class="table" id="menus">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.menuItem)
        </th>
        <th>
           Is this vegatarian?
        </th>
        <th>
            is this gluten free?
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.menuItem)
        </td>
        <td>
            @(item.isThisVegaterian ? "Yes" : "No")
        </td>
        <td>
            @(item.isThisGlutenFree? "Yes":"No")
        </td>
    </tr>
}

</table>

